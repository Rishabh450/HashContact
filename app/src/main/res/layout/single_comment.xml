<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:id="@+id/rootComment"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/feedcard"
                android:layout_gravity="center"
                android:layout_height="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/commenter_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@android:color/white"
                    android:cropToPadding="true"
                    android:background="@drawable/dpback"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"></de.hdodenhof.circleimageview.CircleImageView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="10"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="9">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:id="@+id/commentername"
                android:text="hello"
                android:paddingLeft="15dp"

                android:gravity="center|left"

                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanova"
                android:layout_height="wrap_content">

            </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6"
                        android:orientation="horizontal"
                       >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:id="@+id/timecom"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"

                    android:text=""
                    android:textColor="@color/darkgray"
                    android:layout_gravity="center"
                    android:fontFamily="@font/proximanova"
                    android:layout_height="match_parent">

                </TextView>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:text="5 like"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/proximanova"

                            android:layout_gravity="center"
                            android:gravity="left"


                            android:textSize="12dp"
                            android:textColor="@color/darkgray"

                            android:layout_height="match_parent">

                        </TextView>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:text="Reply"
                            android:textStyle="bold"
                            android:fontFamily="@font/proximanova"

                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"


                            android:textSize="12dp"
                            android:textColor="@color/darkgray"

                            android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:id="@+id/like_comment"
                android:backgroundTint="@color/darkgray"

                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/upvote" />
            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>