<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/showprofile"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_butt"
        android:drawableLeft="@drawable/profile"


        android:drawableRight="@drawable/signright"
        android:padding="20dp"
        android:text="View profile"
        android:textAppearance="@style/MontSerratTextStyle">

    </Button>


    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/MontSerratTextStyle"
        android:background="@drawable/custom_butt"


        android:drawableLeft="@drawable/profile"
        android:drawableRight="@drawable/signright"
        android:padding="20dp"
        android:text="Update profile">

    </Button>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" #7f00ff"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/profile"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="84dp"
            android:layout_height="wrap_content">

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"

            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Welcome"
            android:textAppearance="@style/OpenSansTextStyle" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"

            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text=""
            android:textAppearance="@style/OpenSansTextStyle" />

        <ImageView
            android:id="@+id/profilePhoto3"
            android:layout_width="168dp"

            android:layout_height="168dp"
            android:layout_gravity="center"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="20dp" />


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:id="@+id/detaillist1"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fieldlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:padding="20dp"
            android:elevation="6dp"
            android:visibility="gone"
            android:textAppearance="@style/MontSerratTextStyle"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"

            android:drawableStart="@drawable/add"
            android:background="@drawable/custom_butt"

            android:text="">

        </Button>


        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"

            android:padding="20dp"
            android:visibility="gone"
            android:textAppearance="@style/MontSerratTextStyle"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"

            android:drawableLeft="@drawable/upload_data"
            android:background="@drawable/custom_butt"

            android:text="Update">

        </Button>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
