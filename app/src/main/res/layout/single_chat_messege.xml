<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:longClickable="true"
    android:clickable="true"
    android:orientation="vertical"
    android:id="@+id/ChatBubbleContainer"
    android:layout_height="wrap_content">

    <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
        android:id="@+id/recivedMessegeBubble"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/proximanova"

        android:elevation="3dp"
        android:textColor="@android:color/black"

        android:layout_height="wrap_content"
        android:foregroundGravity="right"
        android:lineSpacingExtra="2dp"
android:background="@drawable/icoming"


        android:paddingLeft="15dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="RECived Messege"
        android:textSize="16.5dp" />

    <ImageView

        android:id="@+id/recivedMessegeImage"
        android:layout_width="300dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:elevation="3dp"

        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_height="300dp">

    </ImageView>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/recivedMessegegif"
        android:layout_width="200dp"
        android:visibility="gone"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_height="200dp">

    </pl.droidsonroids.gif.GifImageView>


<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:gravity="left"
    android:layout_height="wrap_content">
    <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
        android:id="@+id/sendMessegeBubble"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/proximanova"


        android:background="@drawable/outgoing"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:elevation="6dp"
        android:paddingRight="15dp"

        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="16.5dp"

        android:text="Send Messege"
        />

    <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
        android:id="@+id/sendstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-10dp"
        android:gravity="right"
        android:layout_marginRight="11.4dp"
        android:layout_marginLeft="1.4dp"

        android:fontFamily="@font/proximanova"
        android:background="#CBEBFC"


        android:lineSpacingExtra="2dp"

        android:elevation="6dp"
        android:paddingRight="5dp"


        android:paddingBottom="2dp"
        android:textColor="@android:color/black"
        android:textSize="12dp"

        android:text=""
        />

</LinearLayout>

    <ImageView
        android:id="@+id/sendMessegeImage"
        android:layout_width="300dp"
        android:visibility="gone"
        android:elevation="3dp"

        android:layout_marginRight="10dp"

        android:layout_gravity="right"
        android:layout_height="300dp">

    </ImageView>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/sendMessegegif"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:elevation="3dp"

        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
android:visibility="gone"
        android:layout_gravity="right"
        android:layout_height="200dp">

    </pl.droidsonroids.gif.GifImageView>



</LinearLayout>